{
  "name": "sushiibot",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test:worker": "bun --filter @sushiibot/sushii-worker test",
    "dev:data": "bun --filter @sushiibot/sushii-data dev",
    "dev:worker": "bun --filter @sushiibot/sushii-worker dev",
    "dev": "concurrently -c auto --kill-others \"bun dev:data\" \"bun dev:worker\""
  },
  "overrides": {
    "form-data": "4.0.0"
  },
  "devDependencies": {
    "concurrently": "^7.6.0",
    "kysely-codegen": "^0.11.0",
    "typescript": "^5.4.2"
  },
  "dependencies": {
    "hono": "^3.11.12"
  }
}
