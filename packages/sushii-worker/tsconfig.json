{
  "compilerOptions": {
    "types": ["node"],
    "target": "es2016",
    "sourceMap": true,
    "inlineSources": true,
    "sourceRoot": "/",
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "outDir": "./dist"
  },
  "include": ["./src/**/*.ts"]
}
